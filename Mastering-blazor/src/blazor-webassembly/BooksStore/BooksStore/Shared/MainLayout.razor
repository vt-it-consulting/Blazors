@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <CascadingValue Value="@_setttings.BackgroundStyle">
                    @Body
            </CascadingValue>
        </article>
    </main>
</div>

@code
{

    private Settings _setttings = new Settings();
    
    public class Settings
    {

        public bool IsBusy { get; set; } = true;

        public string BackgroundStyle { get; set; } = "background-color:#f2f2f2";
    }
}

